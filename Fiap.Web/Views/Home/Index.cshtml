@using Fiap.Services.CursoAPI.Model.Dto
@model IEnumerable<CursoDto>
    <form>

        <div class="container row">

            @foreach (var curso in Model)
            {
                <div class="col-4 ">
                    <div class="p-0 my-3 border">
                        <div class="card" >
                        <img src="@curso.ImagemURL" class="card-img-top">
                            <div class="card-body">
                            <h3 class="card-title text-success">@curso.Nome</h3>
                            <span class="badge badge-light mb-2 ">@curso.Categoria</span>
                            <p class="card-text">@Html.Raw(curso.Descricao)</p>
                                <div class="row">
                                    <div class="col pt-1">
                                    <span style="font-size:23px;">@string.Format("{0:c}", curso.Preco)</span>
                                    </div>
                                    <div class="col">
                                    <a asp-action="Details" asp-route-cursoId="@curso.CursoId"
                                           class="btn btn-success form-control">Detalhe</a>
                                    </div>

                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </form>