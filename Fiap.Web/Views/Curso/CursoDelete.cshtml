@model Fiap.Web.Models.CursoDTO


<form asp-action="CursoDelete">
	<input asp-for="CursoId" hidden />
	<br />
	<div class="container border p-3">
		<h1 class="text-primary">Remover curso</h1>

		<hr />
		<div class="row">
			<div class="col-2">
				<label asp-for="Nome" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<input asp-for="Nome" disabled class="form-control" />
			</div>
			<div class="col-2">
				<label asp-for="Categoria" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<input asp-for="Categoria" disabled class="form-control" />
			</div>
			<div class="col-2">
				<label asp-for="Descricao" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<textarea asp-for="Descricao" disabled class="form-control" rows="5"></textarea>
			</div>
			<div class="col-2">
				<label asp-for="ImagemURL" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<input asp-for="ImagemURL" disabled class="form-control" />
			</div>
			<div class="col-2">
				<label asp-for="Preco" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<input asp-for="Preco" disabled class="form-control" />
			</div>
			<div class="col-5 offset-2">
				<a asp-action="CursoIndex" class="btn-primary btn form-control ">Voltar</a>
			</div>
			<div class="col-5">
				<input type="submit" value="Remover" class="btn btn-danger form-control" />
			</div>
		</div>
		<div>
		</div>
	</div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
